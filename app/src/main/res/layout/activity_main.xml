<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_main"
        android:textAlignment="center"
        android:layout_margin="50dp"
        android:textStyle="bold"
        android:textColor="@color/aguamarina"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="@string/title"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Identificaci칩n"
        android:textSize="15dp"

        />
    <EditText
        android:id="@+id/etidseller"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese Identificaci칩n"
        android:gravity="center"
        android:textSize="10dp"
        android:inputType="number"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Nombre Completo"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/etfullname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese Nombre"
        android:gravity="center"
        android:textSize="10dp"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_baseline_person_24"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Correo Electronico"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/etmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese correo"
        android:gravity="center"
        android:textSize="10dp"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_baseline_email_24"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Contrase침a"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/etpassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese contrase침a"
        android:gravity="center"
        android:textSize="10dp"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total comision"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/tvtotalcomision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"

        >
        <ImageButton
            android:id="@+id/btnsave"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_save_24"/>
        <ImageButton
            android:id="@+id/btnsearch"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24"/>
        <ImageButton
            android:id="@+id/btnedit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"

        >
        <ImageButton
            android:id="@+id/btndelete"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_forever_24"/>
        <ImageButton
            android:id="@+id/btnsales"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_monetization_on_24"/>
        <ImageButton
            android:id="@+id/btnlist"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_format_list_numbered_24"/>
    </LinearLayout>


</LinearLayout>
